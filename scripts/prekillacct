my %OPTS = @ARGV;
$USER = "$OPTS{'user'}";
chomp $USER;
my $domain =`/scripts/whmapi.pl -gu $USER`;
$domain =~ s/\n//g;
unlink "/usr/local/nginx/vhost/" . "$domain" . ".conf";
system("/etc/init.d/nginx restart");
